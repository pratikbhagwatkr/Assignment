<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="country"
            type="com.example.assignment.domain.model.Countries" />

    </data>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/view_holder_image"
                android:layout_width="match_parent"
                android:layout_height="180sp"
                android:src="@color/black"
                app:urlToImage="@{country.url}"
                tools:src="@drawable/placeholder" />

            <TextView
                android:id="@+id/view_holder_country_name"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="14dp"
                android:text="@{country.commonName}"
                tools:text="Name: " />

            <TextView
                android:visibility="gone"
                android:id="@+id/view_holder_c_official_name"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="14dp"
                android:text="@{country.officialName}"
                tools:text="Official: " />


        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>

</layout>